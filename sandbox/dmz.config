interfaces {
    ethernet eth0 {
        address 192.168.0.6/30
        description "to DC"
    }
    ethernet eth1 {
        address 203.0.113.1/24
    }
    loopback lo {
    }
}
policy {
    route-map CONNECT {
        rule 10 {
            action permit
        }
    }
}
protocols {
    ospf {
        area 0 {
            network 10.0.0.0/8
            network 192.168.0.0/24
            network 203.0.113.0/24
        }
        log-adjacency-changes {
        }
        redistribute {
            connected {
                metric-type 2
                route-map CONNECT
            }
        }
    }
}
service {
    ssh {
        port 22
    }
}
