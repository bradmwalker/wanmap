<html metal:use-macro="base">
  <tal:block metal:fill-slot="content">
    <div class="row">
      <h4>Scanners</h4>
      <table class="table">
          <thead><tr><th>Name</th><th>Interface</th><th>Assigned Subnets</th></thead>
        <tbody tal:condition="scanners">
          <tr tal:repeat="scanner scanners">
            <td><a href="${request.route_url('show_scanner', name=scanner.name)}">${scanner.name}</a></td>
            <td>${scanner.interface}</td>
            <td><tal:block tal:repeat="subnet scanner.subnets">${subnet.subnet} </tal:block></td>
          </tr>
        </tbody>
        <tbody tal:condition="not scanners">
          <tr><td span="3">No scanners found.</td></tr>
        </tbody>
      </table>
    </div>
  </tal:block>
</html>
