<html metal:use-macro="base">
   <tal:block metal:fill-slot="content">
   <div class="row">
       <h4>Scans</h4>
       <table class="table">
           <thead>
               <tr><th>Time</th><th>Type</th><th>Owner</th><th>Parameters</th></tr>
           </thead>
           <tbody tal:condition="scans">
               <tr tal:repeat="scan scans">
                   <td><a href="${request.route_url('show_scan', time=scan.created_at)}" tal:content="scan.created_at"/></td>
                   <td>${scan.type}</td>
                   <td>${scan.user.name}</td>
                   <td>${scan.parameters}</td>
               </tr>
           </tbody>
           <tbody tal:condition="not scans">
               <tr><td span="3">No scans found.</td></tr>
           </tbody>
       </table>
   </div>
  </tal:block>
</html>
